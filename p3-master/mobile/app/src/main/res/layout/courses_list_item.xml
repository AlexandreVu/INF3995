<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/student_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/course_vertical_div"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/course_list_matricule_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="44dp"
        android:text="@string/student_code"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/course_vertical_div"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/course_list_grade_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="44dp"
        android:text="@string/grade"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/course_list_matricule_text"
        app:layout_constraintStart_toStartOf="@+id/course_list_matricule_text"
        app:layout_constraintTop_toBottomOf="@+id/course_list_matricule_text" />

    <View
        android:id="@+id/course_vertical_div"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="275dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/course_list_matricule_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/course_list_matricule_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/course_list_matricule_text"
        app:layout_constraintTop_toTopOf="@+id/course_list_matricule_text" />

    <TextView
        android:id="@+id/course_list_grade_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/course_list_grade_text"
        app:layout_constraintEnd_toEndOf="@+id/course_list_matricule_result"
        app:layout_constraintStart_toStartOf="@+id/course_list_matricule_result"
        app:layout_constraintTop_toTopOf="@+id/course_list_grade_text" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>